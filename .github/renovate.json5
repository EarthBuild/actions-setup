{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'security:openssf-scorecard'
  ],
  configMigration: true,
  prHourlyLimit: 1,
  schedule: [
    'after 6am on monday',
  ],
  dockerfile: {
    managerFilePatterns: [
      '/Earthfile/',
    ],
  },
  labels: [
    'renovate',
  ],
  packageRules: [
    {
      matchManagers: [
        'npm',
        'github-actions',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      groupName: '{{datasource}} (non-major)',
      addLabels: [
        'non-major',
      ],
    },
    {
      matchManagers: [
        'npm',
        'github-actions',
      ],
      matchUpdateTypes: [
        'major',
      ],
      addLabels: [
        '{{updateType}}',
      ],
    },
  ],
}
